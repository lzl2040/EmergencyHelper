<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.my.UpdateInfoActivity">
    <androidx.appcompat.widget.Toolbar
        app:popupTheme="@style/TopBarTheme"
        android:background="@color/gold"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_title_bar_height">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/back"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/back2"
                android:layout_width="@dimen/top_title_bar_back_size"
                android:layout_height="@dimen/top_title_bar_back_size"/>
            <TextView
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/top_title_bar_text_size"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="@string/my_info"/>
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/change_header"
            android:paddingRight="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/update_info_item_height">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:text="头像"
                    android:textSize="@dimen/update_info_eidt_text_size"
                    android:textColor="@color/huibai_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <com.xuexiang.xui.widget.imageview.RadiusImageView
                    app:riv_is_circle="true"
                    android:id="@+id/header"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="@dimen/update_info_header_size"
                    android:layout_height="@dimen/update_info_header_size"/>
                <ImageView
                    android:id="@+id/choose_header"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:src="@mipmap/right"
                    android:layout_width="@dimen/update_info_choose_size"
                    android:layout_height="@dimen/update_info_choose_size"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/huibai"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingRight="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/update_info_item_height">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:text="电话号码:"
                    android:textSize="@dimen/update_info_eidt_text_size"
                    android:textColor="@color/huibai_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:background="@null"
                    android:enabled="false"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:id="@+id/phone"
                    android:text="123"
                    android:textColor="@color/black"
                    android:textSize="@dimen/update_info_cotent_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/edit_phone"
                    android:text="编辑"
                    android:textSize="@dimen/update_info_eidt_text_size"
                    android:textColor="@color/green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/huibai"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingRight="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/update_info_item_height">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:text="密码:"
                    android:textSize="@dimen/update_info_eidt_text_size"
                    android:textColor="@color/huibai_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="@dimen/margin_10"
                    android:id="@+id/pwd"
                    android:text="123"
                    android:textColor="@color/black"
                    android:textSize="@dimen/update_info_cotent_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/view_pwd"
                    android:text="查看"
                    android:textSize="@dimen/update_info_eidt_text_size"
                    android:textColor="@color/green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/huibai"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingRight="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_10"
            android:layout_width="match_parent"
            android:layout_height="@dimen/update_info_item_height">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:text="用户名:"
                    android:textSize="@dimen/update_info_eidt_text_size"
                    android:textColor="@color/huibai_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:background="@null"
                    android:enabled="false"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:id="@+id/name"
                    android:text="123"
                    android:textColor="@color/black"
                    android:textSize="@dimen/update_info_cotent_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/edit_name"
                    android:text="编辑"
                    android:textSize="@dimen/update_info_eidt_text_size"
                    android:textColor="@color/green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/huibai"/>
    </LinearLayout>
</LinearLayout>