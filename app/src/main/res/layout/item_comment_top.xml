<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:paddingLeft="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <com.example.emergencyhelper.ui.RoundImage
            android:id="@+id/post_header"
            android:layout_width="40dp"
            android:src="@drawable/a3"
            android:layout_height="40dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="14sp"
                android:text="醉挽清风"
                android:id="@+id/post_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="5dp"
                android:background="@color/blue_sort"
                android:text="楼主"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:paddingLeft="18dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:id="@+id/title"
            android:textSize="18sp"
            android:text="电视坏了怎么办"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/q13"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/browser_num"
                        android:text="300"
                        android:textColor="@color/huibai_text"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/q11"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/comment_num"
                        android:text="0"
                        android:textColor="@color/huibai_text"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/huibai_text"
                android:layout_marginLeft="200dp"
                android:textSize="12sp"
                android:text="昨天20:00"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@color/back_color"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
</LinearLayout>