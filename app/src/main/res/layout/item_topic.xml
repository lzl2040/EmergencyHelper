<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/topic_wra"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="10dp"
    android:paddingLeft="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <com.example.emergencyhelper.ui.RoundImage
                android:id="@+id/header"
                android:src="@drawable/q6"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/item_topic_user_header_size"
                android:layout_height="@dimen/item_topic_user_header_size"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="124"
                android:textColor="@color/black"
                android:textSize="@dimen/item_topic_username_text"/>
        </LinearLayout>
        <TextView
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/sorts"
            android:textSize="15sp"
            android:textColor="@color/coral"
            android:text="知识分享"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/desc"
            android:text="怎么修电视?"
            android:textSize="@dimen/item_topic_desc_text"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/detail"
            android:maxLines="4"
            android:textColor="@color/huibai_text"
            android:textSize="@dimen/item_topic_detail_text"
            android:text="2323232"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/q13"
                    android:layout_width="@dimen/item_topic_view_icon_size"
                    android:layout_height="@dimen/item_topic_view_icon_size"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/browser_num"
                    android:text="12"
                    android:textColor="@color/huibai_text"
                    android:textSize="@dimen/item_topic_icon_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/q11"
                    android:layout_width="@dimen/item_topic_comment_icon_size"
                    android:layout_height="@dimen/item_topic_comment_icon_size"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/comment_num"
                    android:text="12"
                    android:textColor="@color/huibai_text"
                    android:textSize="@dimen/item_topic_icon_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>