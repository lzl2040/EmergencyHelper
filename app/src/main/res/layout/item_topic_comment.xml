<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginBottom="3dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_10"
        android:paddingTop="@dimen/margin_5"
        android:paddingBottom="@dimen/margin_5"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <com.example.emergencyhelper.ui.RoundImage
            android:id="@+id/header"
            android:src="@drawable/a3"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_marginLeft="@dimen/margin_10"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="醉挽清风"
            android:textColor="@color/black"
            android:textSize="@dimen/item_comment_poster_name_size" />

        </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/margin_40"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/content"
                android:text="电视坏了怎么办"
                android:textColor="@color/black"
                android:textSize="@dimen/item_comment_content_size"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="3dp"
                android:id="@+id/time"
                android:textSize="@dimen/item_comment_content_time_text"
                android:textColor="@color/huibai_text"
                android:text="18:01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/huibai"/>
</LinearLayout>
