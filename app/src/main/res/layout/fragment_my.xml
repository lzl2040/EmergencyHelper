<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="@dimen/radius_9"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="40dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="19dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <com.example.emergencyhelper.ui.RoundImage
                            android:id="@+id/img_header"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/head"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="阿农"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="欢迎来到此平台"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_10"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/edit_btn"
                            android:background="@drawable/edit_btn"
                            android:text="@string/edit_information"
                            android:textSize="@dimen/my_edit_information_text"
                            android:layout_width="@dimen/my_edit_btn_width"
                            android:layout_height="@dimen/my_edit_btn_height"/>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/receive_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:layout_marginBottom="@dimen/margin_5"
                            android:textSize="@dimen/my_task_information_num_text"
                            android:textColor="@color/black" />

                        <TextView
                            android:textSize="@dimen/my_task_information_text_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/receive_task_num"
                            android:textColor="@color/huibai_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/complete_num"
                            android:layout_marginBottom="@dimen/margin_5"
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/my_task_information_num_text"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textColor="@color/black" />

                        <TextView
                            android:textSize="@dimen/my_task_information_text_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/complete_task_num"
                            android:textColor="@color/huibai_text" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/integral"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/my_function_icon_size"
                    android:layout_height="@dimen/my_function_icon_size"
                    android:background="@drawable/integral" />

                <TextView
                    android:textSize="@dimen/my_function_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分"
                    android:textColor="#404040" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dingdan"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/my_function_icon_size"
                    android:layout_height="@dimen/my_function_icon_size"
                    android:background="@drawable/d2" />

                <TextView
                    android:textSize="@dimen/my_function_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单"
                    android:textColor="#404040" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/my_function_icon_size"
                    android:layout_height="@dimen/my_function_icon_size"
                    android:background="@drawable/c8" />

                <TextView
                    android:textSize="@dimen/my_function_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点赞"
                    android:textColor="#404040" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/post"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/my_function_icon_size"
                    android:layout_height="@dimen/my_function_icon_size"
                    android:background="@drawable/d4" />

                <TextView
                    android:textSize="@dimen/my_function_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布"
                    android:textColor="#404040" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="10dp"
            android:text="个人中心"
            android:textColor="#404040" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_collect"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <ImageView
                    android:id="@+id/img_collect"
                    android:layout_width="@dimen/my_function_icon_size"
                    android:layout_height="@dimen/my_function_icon_size"
                    android:layout_centerVertical="true"
                    android:src="@drawable/d5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_collect"
                    android:text="我的客服"
                    android:textColor="#404040"
                    android:textSize="@dimen/my_function_text_size" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#EEEEEE" />

            <RelativeLayout
                android:id="@+id/rl_history"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <ImageView
                    android:id="@+id/img_history"
                    android:layout_width="@dimen/my_function_icon_size"
                    android:layout_height="@dimen/my_function_icon_size"
                    android:layout_centerVertical="true"
                    android:src="@drawable/d6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_history"
                    android:text="我的钱包"
                    android:textColor="#404040"
                    android:textSize="@dimen/my_function_text_size" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#EEEEEE" />

            <RelativeLayout
                android:id="@+id/rl_about_us"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <ImageView
                    android:id="@+id/img_about_us"
                    android:layout_width="@dimen/my_function_icon_size"
                    android:layout_height="@dimen/my_function_icon_size"
                    android:layout_centerVertical="true"
                    android:src="@drawable/d7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_about_us"
                    android:text="我的设置"
                    android:textColor="#404040"
                    android:textSize="@dimen/my_function_text_size" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <LinearLayout
                android:paddingRight="@dimen/margin_20"
                android:paddingLeft="@dimen/margin_20"
                android:paddingBottom="@dimen/margin_10"
                android:paddingTop="@dimen/margin_10"
                android:layout_width="match_parent"
                android:layout_height="75dp">
                <Button
                    android:id="@+id/exit_btn"
                    android:text="@string/exit"
                    android:textSize="@dimen/update_info_exit_size"
                    android:background="@color/gold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>